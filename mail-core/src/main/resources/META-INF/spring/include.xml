<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!--
    This spring context file should be included in every module context file.  It
    contains a set of utility and initialisation components that need to be
    directly defined in every context.
    -->

    <!-- A bean that scans for classes implementing the Lifecycle interface, used for logging. -->
    <bean class="com.zutubi.services.mail.core.lifecycle.LifecycleDetector"/>

</beans>
